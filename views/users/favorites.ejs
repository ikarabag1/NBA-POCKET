        .favorites-container {
            grid-template-columns: 1fr;
        }

        .sidebar {
            position: relative;
            height: auto;
            border-right: none;
            border-bottom: 1px solid rgba(192, 192, 192, 0.1);
        }
    }

    @media (max-width: 768px) {
        .main-content {
            padding: 20px;
        }

        .players-grid {
            grid-template-columns: 1fr;
        }

