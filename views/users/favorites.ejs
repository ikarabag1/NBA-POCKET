    .empty-state {
        text-align: center;
        padding: 80px 20px;
        margin-bottom: 60px;
    }

    .empty-icon {
        margin: 0 auto 30px;
        width: 80px;
        height: 80px;
        color: #606060;
    }

    .empty-state h2 {
        font-size: 2em;
        font-weight: 700;
        margin-bottom: 15px;
        color: #ffffff;
    }

    .empty-state p {
        color: #808080;
        font-size: 1.1em;
        margin-bottom: 30px;
    }

    /* Notes Section */
    .notes-section {
        background: rgba(26, 26, 26, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(192, 192, 192, 0.2);
        border-radius: 20px;
        padding: 35px;
    }

    .section-header {
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px solid rgba(192, 192, 192, 0.1);
