<div class="favorites-container">
    <!-- Favorite Players Section -->
    <div class="faves-section">
        <h2>My Favorite NBA Players (<%= faves.length %>)</h2>

        <% if (faves.length > 0) { %>
            <% faves.forEach(player => { %>
                <div class="player-item">
                    <div class="player-info">
                        <h3><%= player.firstname %> <%= player.lastname %></h3>
                        <p><strong>Height:</strong> <%= player.height || 'N/A' %></p>
                        <p><strong>Weight:</strong> <%= player.weight ? player.weight + ' lbs' : 'N/A' %></p>
                    </div>
                    <div class="player-actions">
                        <form method="POST" action="/players/favorites/?_method=DELETE">
                            <input type="hidden" name="playerId" value="<%= player.id %>">
                            <button class="remove-btn" type="submit">Remove</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="empty-message">No favorite players yet. Search for players and add them to your favorites!</p>
        <% } %>
    </div>

    <!-- Comments Section -->
    <div class="comments-section">
        <h2>Notes</h2>
        
        <% if (comment.length > 0) { %>
            <ul class="comments-list">
                <% comment.forEach(element => { %>
                    <li class="comment-item">
                        <p class="comment-text"><%= element.note %></p>
                        
                        <div class="comment-actions">
                            <form method="POST" action="/comments/favorites/<%= element.id %>?_method=PUT" class="inline-form">
                                <input type="text" id="note-<%= element.id %>" placeholder="Edit your note" name="note" value="<%= element.note %>">
                                <button type="submit" class="update-btn">Update</button>
                            </form>
                            
                            <form method="POST" action="/comments/favorites/<%= element.id %>?_method=DELETE" class="inline-form">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </div>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="empty-message">No notes yet.</p>
        <% } %>
        
        <div class="add-comment">
            <h3>Add New Note</h3>
            <form method="POST" action="/comments/favorites">
                <input type="text" name="note" placeholder="Write a note about your favorites..." required>
                <button type="submit" class="add-btn">Add Note</button>
            </form>
        </div>
    </div>
</div>

