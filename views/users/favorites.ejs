            font-size: 2em;
        }

        .add-note-form {
            flex-direction: column;
        }

        .note-actions {
            flex-direction: column;
        }

        .update-form {
            flex-direction: column;
        }
    }

    /* Smooth scroll */
    html {
        scroll-behavior: smooth;
    }

    ::selection {
        background: rgba(255, 215, 0, 0.3);
        color: #FFD700;
    }
</style>
