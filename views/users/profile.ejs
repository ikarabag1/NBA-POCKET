<div class="profile-container">
    <!-- Sidebar Navigation -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <div class="logo-mini">
                <svg width="50" height="50" viewBox="0 0 50 50">
                    <defs>
                        <linearGradient id="sidebarGold" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" style="stop-color:#FFD700"/>
                            <stop offset="100%" style="stop-color:#FFA500"/>
                        </linearGradient>
                    </defs>
                    <circle cx="25" cy="25" r="20" fill="url(#sidebarGold)" opacity="0.9"/>
                    <circle cx="25" cy="25" r="12" fill="#1a1a1a" stroke="#C0C0C0" stroke-width="1"/>
                </svg>
            </div>
            <h3>NBA POCKET</h3>
        </div>

        <div class="user-info">
            <div class="user-avatar">
                <%= user.email.charAt(0).toUpperCase() %>
            </div>
            <p class="user-email"><%= user.email %></p>
        </div>

        <ul class="nav-menu">
            <li class="nav-item active">
                <a href="/users/profile">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <path d="M10 2L3 7V18H8V13H12V18H17V7L10 2Z" stroke="currentColor" stroke-width="1.5"/>
                    </svg>
                    <span>Profile</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/players/favorites">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <path d="M10 3L12 8H17L13 11L14 16L10 13L6 16L7 11L3 8H8L10 3Z" stroke="currentColor" stroke-width="1.5"/>
                    </svg>
                    <span>Favorites</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <rect x="3" y="3" width="6" height="6" stroke="currentColor" stroke-width="1.5"/>
                        <rect x="11" y="3" width="6" height="6" stroke="currentColor" stroke-width="1.5"/>
                        <rect x="3" y="11" width="6" height="6" stroke="currentColor" stroke-width="1.5"/>
                        <rect x="11" y="11" width="6" height="6" stroke="currentColor" stroke-width="1.5"/>
                    </svg>
                    <span>Home</span>
                </a>
            </li>
            <li class="nav-item nav-logout">
                <a href="/users/logout">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <path d="M7 3H4V17H7M13 7L17 10L13 13M17 10H7" stroke="currentColor" stroke-width="1.5"/>
                    </svg>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="content-header">
            <div>
                <h1 class="page-title">Welcome Back</h1>
                <p class="page-subtitle">Manage your collection and discover new players</p>
            </div>
        </div>

        <div class="content-grid">
            <!-- Search Section -->
            <div class="card card-large">
                <div class="card-header">
                    <div class="card-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <circle cx="11" cy="11" r="7" stroke="currentColor" stroke-width="2"/>
                            <path d="M16 16L20 20" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </div>
                    <h2>Search NBA Players</h2>
                </div>
                <form method="GET" action="/players" class="search-form">
                    <div class="search-input-wrapper">
                        <input 
                            type="text" 
                            id="nbaplayersapi-search" 
                            name="search" 
                            placeholder="Enter player's first or last name..." 
                            required
                            class="search-input"
                        />
                        <button type="submit" class="btn btn-gold">
                            <span>Search</span>
                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                                <path d="M6 8L10 12L6 16" stroke="currentColor" stroke-width="2"/>
                            </svg>
                        </button>
                    </div>
                    <p class="input-hint">Try searching for "LeBron", "Curry", or "Durant"</p>
                </form>
            </div>

            <!-- Password Update Section -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect x="5" y="11" width="14" height="10" rx="2" stroke="currentColor" stroke-width="2"/>
                            <path d="M8 11V7C8 4.79 9.79 3 12 3C14.21 3 16 4.79 16 7V11" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </div>
                    <h2>Security</h2>
                </div>
                <form method="POST" action="/users/profile/?_method=PUT" class="password-form">
                    <div class="form-group">
                        <label for="password">New Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            placeholder="Enter new password"
                            minlength="6"
                            required
                            class="form-input"
                        />
                        <span class="input-hint">Minimum 6 characters</span>
                    </div>
                    <button type="submit" class="btn btn-silver btn-block">
                        <span>Update Password</span>
                    </button>
                </form>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M13 2L3 14H12L11 22L21 10H12L13 2Z" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </div>
                    <h2>Quick Actions</h2>
                </div>
                <div class="actions-list">
                    <a href="/players/favorites" class="action-item">
                        <div class="action-icon-wrapper">
                            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                                <path d="M10 3L12 8H17L13 11L14 16L10 13L6 16L7 11L3 8H8L10 3Z" stroke="currentColor" stroke-width="1.5"/>
                            </svg>
                        </div>
                        <div class="action-content">
                            <h4>My Favorites</h4>
                            <p>View your collection</p>
                        </div>
                        <svg class="action-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
                            <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </a>

                    <a href="/" class="action-item">
                        <div class="action-icon-wrapper">
                            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                                <path d="M10 2L3 7V18H8V13H12V18H17V7L10 2Z" stroke="currentColor" stroke-width="1.5"/>
                            </svg>
                        </div>
                        <div class="action-content">
                            <h4>Home</h4>
                            <p>Back to main page</p>
                        </div>
                        <svg class="action-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
                            <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </main>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #0a0a0a 100%);
        color: #ffffff;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        min-height: 100vh;
    }

    .profile-container {
        display: grid;
        grid-template-columns: 280px 1fr;
        min-height: 100vh;
    }

    /* Sidebar Styles */
    .sidebar {
        background: rgba(10, 10, 10, 0.95);
        backdrop-filter: blur(20px);
        border-right: 1px solid rgba(192, 192, 192, 0.1);
        padding: 30px 0;
        position: sticky;
        top: 0;
        height: 100vh;
        overflow-y: auto;
        animation: slideInLeft 0.6s ease-out;
    }

    @keyframes slideInLeft {
        from { opacity: 0; transform: translateX(-30px); }
        to { opacity: 1; transform: translateX(0); }
    }

    .sidebar-header {
        text-align: center;
        padding: 0 20px 30px;
        border-bottom: 1px solid rgba(192, 192, 192, 0.1);
        margin-bottom: 30px;
    }

    .logo-mini {
        margin: 0 auto 15px;
        width: 50px;
        height: 50px;
        animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-5px); }
    }

    .sidebar-header h3 {
        font-size: 1.2em;
        font-weight: 800;
        letter-spacing: 3px;
        background: linear-gradient(135deg, #FFD700, #FFA500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .user-info {
        padding: 0 20px 30px;
        text-align: center;
        border-bottom: 1px solid rgba(192, 192, 192, 0.1);
        margin-bottom: 20px;
    }

    .user-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #FFD700, #FFA500);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: 700;
        color: #000;
        margin: 0 auto 15px;
        box-shadow: 0 5px 20px rgba(255, 215, 0, 0.3);
    }

    .user-email {
        color: #C0C0C0;
        font-size: 0.9em;
        word-break: break-word;
    }

    .nav-menu {
        list-style: none;
        padding: 0 15px;
    }

    .nav-item {
        margin-bottom: 5px;
    }

    .nav-item a {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px 15px;
        color: #808080;
        text-decoration: none;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-weight: 600;
        position: relative;
        overflow: hidden;
    }

    .nav-item a::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 3px;
        background: linear-gradient(135deg, #FFD700, #FFA500);
        transform: scaleY(0);
        transition: transform 0.3s ease;
    }

    .nav-item.active a,
    .nav-item a:hover {
        color: #FFD700;
        background: rgba(255, 215, 0, 0.1);
    }

    .nav-item.active a::before,
    .nav-item a:hover::before {
        transform: scaleY(1);
    }

    .nav-logout {
        margin-top: auto;
        padding-top: 20px;
        border-top: 1px solid rgba(192, 192, 192, 0.1);
    }

    .nav-logout a:hover {
        color: #ff4444;
        background: rgba(255, 68, 68, 0.1);
    }

    /* Main Content */
    .main-content {
        padding: 40px;
        animation: fadeIn 0.8s ease-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .content-header {
        margin-bottom: 40px;
    }

    .page-title {
        font-size: 2.5em;
        font-weight: 800;
        margin-bottom: 10px;
        background: linear-gradient(135deg, #ffffff, #C0C0C0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: 1px;
    }

    .page-subtitle {
        color: #808080;
        font-size: 1.1em;
    }

    .content-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 30px;
    }

    .card {
        background: rgba(26, 26, 26, 0.8);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(192, 192, 192, 0.2);
        border-radius: 20px;
        padding: 30px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        animation: scaleIn 0.5s ease-out;
    }

    @keyframes scaleIn {
        from { opacity: 0; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1); }
    }

    .card:hover {
        transform: translateY(-5px);
        border-color: rgba(255, 215, 0, 0.3);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    }

    .card-large {
        grid-column: span 2;
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 25px;
        padding-bottom: 20px;
        border-bottom: 1px solid rgba(192, 192, 192, 0.1);
    }

    .card-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        background: linear-gradient(135deg, rgba(255, 215, 0, 0.2), rgba(255, 165, 0, 0.2));
        display: flex;
        align-items: center;
        justify-content: center;
        color: #FFD700;
    }

    .card-header h2 {
        font-size: 1.5em;
        font-weight: 700;
        color: #ffffff;
    }

    /* Search Form */
    .search-input-wrapper {
        display: flex;
        gap: 15px;
        margin-bottom: 15px;
    }

    .search-input {
        flex: 1;
        padding: 18px 25px;
        background: rgba(0, 0, 0, 0.4);
        border: 2px solid rgba(192, 192, 192, 0.2);
        border-radius: 12px;
        color: #ffffff;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        border-color: #FFD700;
        background: rgba(0, 0, 0, 0.6);
        box-shadow: 0 0 20px rgba(255, 215, 0, 0.2);
    }

    .search-input::placeholder {
        color: #606060;
    }

    /* Form Styles */
    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        display: block;
        margin-bottom: 10px;
        font-weight: 600;
        color: #C0C0C0;
        font-size: 0.9em;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .form-input {
        width: 100%;
        padding: 15px 20px;
        background: rgba(0, 0, 0, 0.4);
        border: 2px solid rgba(192, 192, 192, 0.2);
        border-radius: 10px;
        color: #ffffff;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: #FFD700;
        background: rgba(0, 0, 0, 0.6);
        box-shadow: 0 0 20px rgba(255, 215, 0, 0.2);
    }

    .input-hint {
        color: #606060;
        font-size: 0.9em;
        margin-top: 8px;
    }

    /* Buttons */
    .btn {
        padding: 15px 30px;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 700;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .btn-gold {
        background: linear-gradient(135deg, #FFD700, #FFA500);
        color: #000000;
        box-shadow: 0 10px 30px rgba(255, 215, 0, 0.3);
    }

    .btn-gold:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 40px rgba(255, 215, 0, 0.4);
    }

    .btn-silver {
        background: linear-gradient(135deg, #C0C0C0, #A8A8A8);
        color: #000000;
        box-shadow: 0 10px 30px rgba(192, 192, 192, 0.3);
    }

    .btn-silver:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 40px rgba(192, 192, 192, 0.4);
    }

    .btn-block {
        width: 100%;
        display: flex;
    }

    /* Actions List */
    .actions-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .action-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 20px;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(192, 192, 192, 0.1);
        border-radius: 12px;
        text-decoration: none;
        color: #ffffff;
        transition: all 0.3s ease;
    }

    .action-item:hover {
        background: rgba(255, 215, 0, 0.1);
        border-color: rgba(255, 215, 0, 0.3);
        transform: translateX(5px);
    }

    .action-icon-wrapper {
        width: 45px;
        height: 45px;
        border-radius: 10px;
        background: linear-gradient(135deg, rgba(255, 215, 0, 0.2), rgba(255, 165, 0, 0.2));
        display: flex;
        align-items: center;
        justify-content: center;
        color: #FFD700;
        flex-shrink: 0;
    }

    .action-content {
        flex: 1;
    }

    .action-content h4 {
        font-size: 1.1em;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .action-content p {
        color: #808080;
        font-size: 0.9em;
    }

    .action-arrow {
        color: #606060;
        transition: all 0.3s ease;
        flex-shrink: 0;
    }

    .action-item:hover .action-arrow {
        color: #FFD700;
        transform: translateX(5px);
    }

    /* Responsive */
    @media (max-width: 1200px) {
        .card-large {
            grid-column: span 1;
        }
    }

    @media (max-width: 1024px) {
        .profile-container {
            grid-template-columns: 1fr;
        }

        .sidebar {
            position: relative;
            height: auto;
            border-right: none;
            border-bottom: 1px solid rgba(192, 192, 192, 0.1);
        }
    }

    @media (max-width: 768px) {
        .main-content {
            padding: 20px;
        }

        .content-grid {
            grid-template-columns: 1fr;
        }

        .search-input-wrapper {
            flex-direction: column;
        }

        .page-title {
            font-size: 2em;
        }
    }

    /* Smooth scroll */
    html {
        scroll-behavior: smooth;
    }

    ::selection {
        background: rgba(255, 215, 0, 0.3);
        color: #FFD700;
    }
</style>
