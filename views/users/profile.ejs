<div class="profile-container">
    <div class="profile-header">
        <h1>Hello, <%= user.username %>! üëã</h1>
        <p class="subtitle">Search for NBA players and manage your account</p>
    </div>

    <div class="profile-content">
        <!-- Search Section -->
        <div class="search-section">
            <h2>üîç Search NBA Players</h2>
            <form method="GET" action="/players" class="search-form">
                <div class="search-input-group">
                    <input 
                        type="text" 
                        id="nbaplayersapi-search" 
                        name="search" 
                        placeholder="Enter player's first or last name..." 
                        required
                    />
                    <button type="submit" class="search-btn">Search</button>
                </div>
                <p class="search-hint">Try searching for "LeBron", "Curry", or "Durant"</p>
            </form>
        </div>

        <!-- Password Update Section -->
        <div class="password-section">
            <h2>üîê Update Password</h2>
            <form method="POST" action="/users/profile/?_method=PUT" class="password-form">
                <div class="form-group">
                    <label for="password">New Password:</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        placeholder="Enter your new password"
                        minlength="6"
                        required
                    />
                </div>
                <button type="submit" class="update-btn">Update Password</button>
            </form>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <h2>‚ö° Quick Actions</h2>
            <div class="actions-grid">
                <a href="/players/favorites" class="action-card">
                    <span class="action-icon">‚≠ê</span>
                    <h3>View Favorites</h3>
                    <p>See all your favorite players</p>
                </a>
                <a href="/" class="action-card">
                    <span class="action-icon">üè†</span>
                    <h3>Home</h3>
                    <p>Return to home page</p>
                </a>
                <a href="/users/logout" class="action-card logout-card">
                    <span class="action-icon">üö™</span>
                    <h3>Logout</h3>
                    <p>Sign out of your account</p>
                </a>
            </div>
        </div>
    </div>
</div>

