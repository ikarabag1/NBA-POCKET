        width: 100%;
        max-width: 480px;
        animation: fadeInUp 0.6s ease-out;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .login-card {
        background: rgba(26, 26, 26, 0.95);
        border: 1px solid rgba(192, 192, 192, 0.2);
        border-radius: 20px;
        padding: 50px 40px;
        box-shadow: 
            0 20px 60px rgba(0, 0, 0, 0.5),
            0 0 100px rgba(255, 215, 0, 0.1);
        backdrop-filter: blur(20px);
        position: relative;
        overflow: hidden;
    }

    .login-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #FFD700, #FFA500, #FFD700);
        animation: shimmer 3s ease-in-out infinite;
    }

    @keyframes shimmer {
        0%, 100% { opacity: 0.5; }
        50% { opacity: 1; }
    }

    .login-logo {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
        animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }

    .login-title {
        font-size: 2em;
        font-weight: 800;
        text-align: center;
        margin-bottom: 10px;
        background: linear-gradient(135deg, #ffffff, #C0C0C0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -0.5px;
    }

    .login-subtitle {
        text-align: center;
        color: #C0C0C0;
        margin-bottom: 40px;
        font-size: 0.95em;
    }

    .error-message {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 15px 20px;
        background: rgba(255, 59, 48, 0.1);
        border: 1px solid rgba(255, 59, 48, 0.3);
        border-radius: 12px;
        color: #ff6b6b;
        margin-bottom: 25px;
        animation: shake 0.5s ease-out;
    }

    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-10px); }
        75% { transform: translateX(10px); }
    }

    .error-message svg {
        flex-shrink: 0;
    }

    .login-form {
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 10px;
        font-size: 0.9em;
        letter-spacing: 0.3px;
    }

    .form-group label svg {
        color: #FFD700;
    }

    .form-group input {
        width: 100%;
        padding: 15px 20px;
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid rgba(192, 192, 192, 0.2);
        border-radius: 12px;
        color: #ffffff;
        font-size: 16px;
        transition: all 0.3s ease;
        font-family: inherit;
    }

    .form-group input::placeholder {
        color: rgba(192, 192, 192, 0.4);
    }

    .form-group input:focus {
        outline: none;
        border-color: #FFD700;
        background: rgba(255, 215, 0, 0.05);
        box-shadow: 0 0 0 4px rgba(255, 215, 0, 0.1);
    }

    .login-btn {
        width: 100%;
        padding: 18px 30px;
        background: linear-gradient(135deg, #FFD700, #FFA500);
        border: none;
        border-radius: 12px;
        color: #0a0a0a;
        font-size: 1.05em;
        font-weight: 700;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        transition: all 0.3s ease;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 20px rgba(255, 215, 0, 0.3);
    }

    .login-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 30px rgba(255, 215, 0, 0.5);
        background: linear-gradient(135deg, #FFA500, #FFD700);
    }

    .login-btn:active {
        transform: translateY(0);
    }

    .signup-link {
        text-align: center;
        padding-top: 25px;
        border-top: 1px solid rgba(192, 192, 192, 0.1);
        color: #C0C0C0;
        font-size: 0.95em;
    }

    .signup-link a {
        color: #FFD700;
        text-decoration: none;
        font-weight: 600;
        margin-left: 8px;
        transition: all 0.3s ease;
    }

    .signup-link a:hover {
        color: #FFA500;
        text-decoration: underline;
    }

    .back-link {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        margin-top: 25px;
        color: #C0C0C0;
        text-decoration: none;
        font-size: 0.9em;
        transition: all 0.3s ease;
    }

    .back-link:hover {
        color: #ffffff;
        gap: 12px;
    }

    .back-link svg {
        transition: transform 0.3s ease;
    }

    .back-link:hover svg {
        transform: translateX(-4px);
    }

    @media (max-width: 768px) {
        .login-card {
            padding: 40px 30px;
        }

        .login-title {
            font-size: 1.6em;
        }

        .form-group input {
            padding: 13px 18px;
        }

        .login-btn {
            padding: 16px 25px;
        }
    }
</style>
