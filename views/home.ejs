                                <feMergeNode in="SourceGraphic"/>
                            </feMerge>
                        </filter>
                    </defs>
                    <circle cx="60" cy="60" r="50" fill="url(#goldGradient)" filter="url(#glow)" opacity="0.9"/>
                    <circle cx="60" cy="60" r="30" fill="#1a1a1a" stroke="#C0C0C0" stroke-width="2"/>
                    <path d="M 40 40 L 80 80 M 80 40 L 40 80" stroke="url(#goldGradient)" stroke-width="3"/>
                </svg>
            </div>
            <h1 class="main-title">NBA POCKET</h1>
            <p class="tagline">Premium Player Collection</p>
        </div>

        <div class="auth-section">
            <% if (user) { %>
                <div class="welcome-card">
                    <h2 class="welcome-title">Welcome Back</h2>
                    <p class="user-email"><%= user.email %></p>
                    <div class="action-buttons">
                        <a href="/users/profile" class="btn btn-gold">
                            <span>Profile</span>
                            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
